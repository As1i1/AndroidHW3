<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/debt_name"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/onest_bold"
        android:gravity="center"
        android:layout_marginLeft="10sp"
        android:text="123123132123"
        />

    <TextView
        android:id="@+id/debt_date"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:fontFamily="@font/onest_bold"
        android:gravity="center"
        android:layout_marginEnd="10sp"
        android:text="sfadsfa"
        />

    <TextView
        android:id="@+id/debt_guest_count"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/debt_date"
        android:layout_marginEnd="10sp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/onest_bold"
        android:gravity="center"
        android:text="sfadsfa"
        />

    <ImageView
        android:layout_width="20sp"
        android:layout_height="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/debt_guest_count"
        android:src="@mipmap/guests_icon"
        android:layout_marginEnd="5sp"
        />

    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        app:layout_constraintTop_toBottomOf="@id/debt_name"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/debt_author"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        app:layout_constraintTop_toBottomOf="@id/debt_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10sp"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:fontFamily="@font/onest_bold"
        android:text="dsfadgsadsg"
        />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="20sp"
        android:layout_height="20sp"
        app:layout_constraintTop_toBottomOf="@id/debt_date"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/arrow_icon"
        android:layout_marginRight="10sp"
        />

    <TextView
        android:id="@+id/debt_summary"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        app:layout_constraintTop_toBottomOf="@id/debt_date"
        app:layout_constraintRight_toLeftOf="@id/arrow"
        android:layout_marginRight="10sp"
        android:text="safsdfad"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/debt_summary"
        android:layout_marginTop="5sp"
        android:background="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>